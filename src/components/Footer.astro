---
import { Link } from "@nextui-org/react"
import { Divider } from "@nextui-org/divider"
import { AiFillGithub, AiFillLinkedin, AiFillHeart } from "react-icons/ai"
import { SiKofi } from "react-icons/si";
import { MdOutlineWork } from "react-icons/md"
---

    <footer class="flex flex-col items-center w-full justify-center py-4 border-t border-t-gray-800 rounded-xl gap-4">
      <div class="flex gap-8">
        <section>
          <h4 class="text-lg font-semibold">Содержание</h4>
          <ul>
            <li>
              <Link
                href="/"
                title="Начало"
                isBlock
                color="secondary"
              >
              Начало
              </Link>
            </li>
            <li>
              <Link
                href="/create"
                title="Создать"
                isBlock
                color="secondary"
              >
              Создать
              </Link>
            </li>
            <li>
              <Link
                href="/example"
                title="Пример"
                isBlock
                color="secondary"              >
                Пример
              </Link>
            </li>
          </ul>
        </section>
        <Divider orientation="vertical" />
        <section>
          <h4 class="text-lg font-semibold">Контакты</h4>
          <ul>
            <li>
              <Link
                href="https://github.com/vtjesus"
                title="Repositorio de Github"
                target="blank"
                isBlock
                color="secondary"      
                className="flex gap-2 items-center"      
                >
                <AiFillGithub />
                Github
              </Link>
            </li>
            <li>
              <Link
                href="https://github.com/vtjesus"
                title="VTJesus Linkedin"
                target="blank"
                isBlock
                color="secondary"       
                className="flex gap-2 items-center"      
                >
                <AiFillLinkedin />
                Linkedin
              </Link>
            </li>
            <li>
              <Link
                href="https://github.com/vtjesus"
                title="Поддержите кофе"
                target="blank"
                isBlock
                color="secondary"       
                className="flex gap-2 items-center"      
                >
                <SiKofi />
                Купи мне кофе
              </Link>
            </li>
            <li>
              <Link
                href="https://github.com/vtjesus"
                title="VTJesus Portfolio"
                target="blank"
                isBlock
                color="secondary"        
                className="flex gap-2 items-center"      
                >
                <MdOutlineWork />
                Портфолио
              </Link>
            </li>
          </ul>
        </section>
      </div>
      <h5 class="flex items-center gap-2">
        Создано с <AiFillHeart /> VTJesus
      </h5>
    </footer>

    <style>
      a{
        color: white;
      }
    </style>
